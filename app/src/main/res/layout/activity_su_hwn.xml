<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".suHwnAct">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="Select Size"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:id="@+id/radiogrpSuhwn"
        android:layout_width="278dp"
        android:layout_height="225dp"
        android:layout_marginBottom="108dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent">

        <RadioButton
            android:id="@+id/radioButton5Small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Small Personal Pizza"
            android:checked="true"/>

        <RadioButton
            android:id="@+id/radioButton6Med"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Medium Pizza" />

        <RadioButton
            android:id="@+id/radioButton7Large"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Large Family Pizza" />

        <RadioButton
            android:id="@+id/radioButton8XL"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extra Large Party Pizza" />
    </RadioGroup>

    <Button
        android:id="@+id/button2suHwn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:text="Next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>